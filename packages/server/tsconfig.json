{
   "compilerOptions": {
      "strict": true,
      "lib": [
         "es5",
         "es6",
         "esnext",
         "DOM"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "baseUrl": "src",
   }
}